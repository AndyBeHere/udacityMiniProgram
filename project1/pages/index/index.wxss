/* navigator */

.navigator-list {
  /* margin-left:10rpx; */
  display:flex;
  background-color: rgb(44,148,219);
  padding-bottom: 30rpx;
}

.navigator-item{
  /* padding-left:10rpx; */
  display:flex;
  flex-direction: column;
  flex-shrink: 1;
  width:110rpx;
  align-items:center;
 
}

.navigator-item .normal{
  font-size: 40rpx;
  color:rgb(255,255,255);
  line-height: 56rpx;
  opacity: 0.6;
}

.navigator-item .clicked{
  font-size: 45rpx;
  font-weight:600;
  color:rgb(255,255,255);
  line-height: 56rpx;
}

/* hot picture:height-450rpx */

.hot {
  position:absolute;
  top:10%;
  left:85%;
  font-weight:600;
  font-size:35rpx;
  line-height:40rpx;
  color:red;
  /* background-color: rgba(255,255,255,0.4) */
}

.title {
  margin-right:5%;
  margin-left:5%;
  text-align:left;
  font-size: 35rpx;
  line-height: 40rpx;
  color:rgb(255,255,255);
} 

.source{ 
  text-align:left;
  margin-left:5%;
  margin-top:10rpx;
  font-size: 30rpx;
  line-height: 40rpx;
  color:aliceblue;
  opacity: 0.8;
} 

.wrapper {
  position:relative;
  padding-top:270rpx;
  padding-bottom:60rpx;
}

.title-wrapper {
  padding-top:2%;
  margin-left:2.5%;
  margin-right:2.5%;
  background-color:rgba(0,0,0,0.43);
}
.source-wrapper {
  display:flex;
  justify-content: left;
  align-items: center;
}

.firstImage-hot{
  position: absolute;
  left: 2.5%;
  top: 5%;
  width: 95%;
  height: 90%;
  z-index: -1;
}

