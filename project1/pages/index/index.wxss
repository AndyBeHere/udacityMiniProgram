/* news list:height-220rpx */
.list-wrapper {
  display:flex;
  flex-direction: column;
}

.list {
  display:flex;
  align-items: center;
  justify-content: left;
  padding-top:5%;
  padding-bottom:5%;
  margin-left:2.5%;
  margin-right:2.5%;
  border-top: 1px solid rgba(0, 0, 0, 0.1);
}

.list-title-wrapper {
  display:flex;
  flex-direction:column;
  flex-basis:80%;
} 

.list-title {
  padding-right:2.5%;
  margin-right:5%;
  margin-left:2.5%;
  text-align:left;
  font-size: 35rpx;
  line-height: 40rpx;
  color:rgb(0,0,0);
}

.list-source-wrapper {
  display:flex;
  margin-top:2%;
  flex-direction: row;
  justify-content: left;
  align-items: center;
}

.list-source{ 
  text-align:left;
  margin-left:5%;
  font-size: 30rpx;
  line-height: 40rpx;
  color:black;
  opacity: 0.6;
} 

.firstImage{
  flex-basis: 30%;
  height:130rpx;
}



